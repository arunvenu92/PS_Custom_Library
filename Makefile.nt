#####################################################################
# Build custom dynamic libraries
#####################################################################

LINK_LINE= $(LINK) $(DLLFLAGS) \
           -dll \
           -out:$(LIB_DLL) \
           $(ALL_LIB_OBJS) \
           $(SYSLIBS) /ignore:4199 delayimp.lib \
           $(TC_LIBS) \
           $(DEP_LIBS) \
		   $(DELAYLOAD)

#####################################################################
# Build custom stand alone utilities
#####################################################################		   

LINK_LINE_UTIL= $(LINK) $(DLLFLAGS) \
				$(ALL_LIB_OBJS) \
				$(SYSLIBS) /ignore:4199 delayimp.lib \
				$(TC_UTIL_LIBS) \
				$(TC_LIBS) \
				$(DEP_LIBS) \
				$(DELAYLOAD) \
				-out:$(UTIL_NAME).$(EXE)

