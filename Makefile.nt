######################################################################
# Include all include header files 
######################################################################

INCLUDES= -I.  \
          "-I$(TC_ROOT)/include" \
          "-I$(TC_ROOT)/include_cpp" \
          "-I$(MSDEV_INCLUDE)" \
		  "-I$(USER_INCLUDE)" \
		  "-I../Utils"

######################################################################
# Define all custom lib's for atlas copco tc implementation
######################################################################
PS_UTILS=libpsutils
PS_HANDLERS=libpshandlers

######################################################################
# Include the all the variables which are used in Makefile
######################################################################
.SUFFIXES: .obj .cc .c .cxx

NT_LINK_EXT =	*.lib \
		*.pdb \
		*.exp \
		*.ilk \
		*.dll \
		*.manifest

OBJ_EXT=obj
LIB_EXT=lib
DLL_EXT=dll
PDB_EXT=pdb
EXE_MANIFEST=exe.manifest
EXT=c
EXE=exe
CC=cl
LINK=link
ANT=ant
RM=rm -f
CP=cp -R
MV=mv
CHMOD=chmod
MT=mt
		
######################################################################
# Definition and CFLAG variables to compile the source code
######################################################################

ifeq ($(TC_PLATFORM),x86)
DEFINES=-DNT40 -DPOMDLL -DCRTAPI1=_cdecl -DCRTAPI2=cdecl -D_WIN32 \
		-DWIN32 -DWIN32_LEAN_AND_MEAN -DWNT -DBYPASS_FLEX -D_INTEL= \
		-DIPLIB=$(EXPORT/IMPORT) -D_CRT_SECURE_NO_DEPRECATE -D_$(TC_VERSION)
else
DEFINES=-DSTEP -DAP203 -DAP214 -DWIN32_LEAN_AND_MEAN -DWNT \
       -D_CRT_SECURE_NO_DEPRECATE -D_CRT_NONSTDC_NO_DEPRECATE \
       -D_SECURE_SCL=0 -DWNT -D_WIN32 -DWIN32 \
       -D_WIN64 -D_INTEL=1 -DCRTAPI1=_cdecl -DCRTAPI2=cdecl \
	   -DIMAN_TAO -DBYPASS_FLEX -DPOMDLL \
	   -DIPLIB=$(EXPORT/IMPORT) -D_$(TC_VERSION)
endif

ifeq (,$(findstring debug,$(MAKECMDGOALS)))
CFLAGS=-c -nologo -EHsc -W1 -Ox -Oy- -MD
DEFINES+=-DNDEBUG
else
CFLAGS=-c -nologo -EHsc -W1 -Od -Z7 -MDd
DEFINES+=-D_DEBUG
endif

#####################################################################
# Build the source code with debug mode based on TC_DEBUG env
# variable. If env variable is FALSE then code is build with 
# debug mode.
#####################################################################

.cc.obj:
	$(CC) $(CFLAGS) $(INCLUDES) $(DEFINES) $<

.c.obj:
	$(CC) $(CFLAGS) $(INCLUDES) $(DEFINES) $<

.cxx.obj:
	$(CC) $(CFLAGS) $(INCLUDES) $(DEFINES) $<

#####################################################################
# DLL FLAGS DEFINITION
#####################################################################

DLLFLAGS = -debug \
			-nologo \
			-subsystem:console

ifeq ($(TC_PLATFORM),x64)
DLLFLAGS+=-MACHINE:X64
endif



#####################################################################
# Platform Independent libraries
#####################################################################

ifeq (,$(findstring debug,$(MAKECMDGOALS)))
SYSLIBS = wsock32.lib \
          advapi32.lib \
          msvcrt.lib \
          oldnames.lib \
          kernel32.lib \
          winmm.lib
else
SYSLIBS = wsock32.lib \
          advapi32.lib \
          msvcrtd.lib \
          oldnames.lib \
          kernel32.lib \
          winmm.lib
endif

